<div class="row search-side">
  <form class="search-form" action="#" method="post">
    <input class="form-control col-md-8 col-md-offset-4" type="text" name="" placeholder="Search in Products ..."  id="myInput" onkeyup="myFunction()">
    <p style="width:100%;height:50px"></p>
    <a href="/user/addproduct" class="btn btn-success"> Add New Product</a>
  </form>
</div>
<div class="row result">
  <table class="table" id="myTable">
    <thead class="thead">
      <tr>
        <th class="col-sm-1">#</th>
        <th class="col-sm-2">Product Name</th>
        <th class="col-sm-2">Price</th>
        <th class="col-sm-5">Description</th>
        <th class="col-sm-2"></th>
      </tr>
    </thead>
    <tbody>
      {{# each products }}
      <tr>
        <td class="col-sm-1">{{number}}</td>
        <td class="col-sm-2">{{this.title}}</td>
        <td class="col-sm-2">{{this.price}}$ </td>
        <td class="col-sm-5">{{this.description}}</td>
        <td class="col-sm-2"> <a href="/delete/{{this._id}}">Delete</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<script>
function myFunction() {
  var input, filter, table, tr, td, i;
  input = document.getElementById("myInput");
  filter = input.value.toUpperCase();
  table = document.getElementById("myTable");
  tr = table.getElementsByTagName("tr");
  for (i = 0; i < tr.length; i++) {
    td = tr[i].getElementsByTagName("td")[1];
    if (td) {
      if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
        tr[i].style.display = "";
      } else {
        tr[i].style.display = "none";
      }
    }
  }
}
</script>
