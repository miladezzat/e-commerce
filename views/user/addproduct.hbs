<div class="row">

  {{#if hasErrors}}
    <div class="alert alert-danger">
      {{# each messages}}
        <p>{{this}}</p>
      {{/each}}
    </div>
  {{/if}}

  <form class="register-form" action="/user/addproduct" method="post">
  <span class="h2">New Product</span> <a href="/user/profile" class="btn btn-success" style="float:right">Control Panel</a>
  <div class="form-group">
    <label for="productName">Name</label>
    <input type="text" class="form-control" id="productName" placeholder="Enter Product Name" name="name" required>
  </div>
  <div class="form-group">
    <label for="productImage">Image</label>
    <input type="text" class="form-control" id="productImage" placeholder="Enter Product Image url" name="image" required>
  </div>
  <div class="form-group">
    <label for="productPrice">Price</label>
    <input type="number" class="form-control" id="productPrice" placeholder="Enter Product Price" name="price" required>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Description</label>
    <textarea style="resize: none;" class="form-control" id="exampleFormControlTextarea1" rows="3" name="description" required></textarea>
  </div>
  <input type="hidden" name="_csrf" value="{{ csrfToken }}">
  <button type="submit" class="btn btn-primary">Add</button>
  </form>
</div>
