<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success" {{#if noMessage}} hidden {{/if}}>
      {{successMsg}}
    </div>
  </div>
</div>
<!--===================< Start body of website>==================================-->
<div class="row">
  <div class="col-md-2 catogry">
    <h1>Catogry</h1>
    <form class="search-form" action="#" method="post">
      <input class="form-control" type="text" name="" placeholder="Search" id="searcInput" onkeyup="searchFunction()">
    </form>
    <p style="width:100%;height:50px"></p>
    <p class="lead"><input type="checkbox" name="" value=""> ALl</p>
    <p class="lead"><input type="checkbox" name="" value=""> Company</p>
    <p class="lead"><input type="checkbox" name="" value=""> Prand</p>
    <p class="lead"><input type="checkbox" name="" value=""> Region</p>
    <p class="lead"><input type="checkbox" name="" value=""> Price</p>
    <p class="lead"><input type="checkbox" name="" value=""> Type</p>
  </div>
  <div class="col-md-9 products" id="myDiv">
    {{# each products }}
    <div class="row">
      {{# each this }}
      <div class="col-sm-5 col-md-2 item" >
        <img src="{{this.imagePath}}" alt="item1">
        <p class="lead">{{this.title}}</p>
        <p class="description">{{this.description}}</p>
        <p class="lead">${{this.price}}</p>
        <a href="/add-to-cart/{{this._id}}" class="btn btn-success" role="button">Add to card</a>
      </div>
      {{/each}}
    </div>
    {{/each}}
  </div>
</div>
    <!--============< End of Website body>============================-->
<script>
  function searchFunction() {
      var input, filter, table, tr, td, i;
      input = document.getElementById("searcInput");
      filter = input.value.toUpperCase();
      table = document.getElementById("myDiv");
      tr = table.getElementsByTagName("div");
      for (i = 0; i < tr.length; i++) {
        tr2 = tr[i].getElementsByTagName('div');
        for (var r = 0; r < tr2.length; r++) {
          td = tr[r].getElementsByTagName("p")[0];
          if (td) {
            if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
              tr[r].style.display = "";
            } else {
              tr[r].style.display = "none";
            }
          }
        }
      }
    }
</script>
